<Window x:Name="MainWindow1" x:Class="DocsVisionClient.DocsVisionWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocsVisionClient.DocsVisionWindows"
        mc:Ignorable="d"
        Title="Программа работы с деловой корреспонденцией (тестовое задание)"
                    Height="240" Width="900" FontWeight="Bold" FontSize="14" FontFamily="Microsoft Sans Serif" WindowStartupLocation="CenterScreen"
                    MinWidth="800" MinHeight="220" MaxWidth="1360" MaxHeight="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonSettings" Margin="10,10,5,10">
            <Image Source="Resources\SettingsWPF.jpg" Stretch="Fill"/>
        </Button>
        <Button x:Name="ButtonDepartments" Grid.Column="1" Margin="5,10">
            <Image Source="Resources\DepartmentsWPF.jpg" Stretch="Fill"/>
        </Button>
        <Button x:Name="ButtonLetters" Grid.Column="2" Margin="5,10,10,10">
            <Image Source="Resources\LettersWPF.jpg" Stretch="Fill"/>
        </Button>
    </Grid>
</Window>
